<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

<!--    TODO Pascal aie aie aie les nippons ! -->
    <ImageView
        android:id="@+id/wlv_item_workmate_avatar"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/wlv_item_workmate_status_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center|start"
        android:paddingStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/wlv_item_workmate_avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Scarlett has not decided yet"
        tools:textAppearance="@style/workmateItemNormalGhostGreyItalicTextAppearance"/>

</androidx.constraintlayout.widget.ConstraintLayout>