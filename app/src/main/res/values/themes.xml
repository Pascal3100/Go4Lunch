<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Go4Lunch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_diner_orange</item>
        <item name="colorPrimaryVariant">@color/primary_variant_diner_blue</item>
        <item name="colorOnPrimary">@color/light_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_diner_orange</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_diner_orange</item>
        <item name="colorOnSecondary">@color/light_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/light_grey</item>
        <item name="colorOnSurface">@color/black_is_not_black</item>
        <item name="colorError">@color/redish_whisky</item>
        <item name="colorOnError">@color/black_is_not_black</item>
        <item name="colorOnBackground">@color/black_is_not_black</item>

    </style>

</resources>