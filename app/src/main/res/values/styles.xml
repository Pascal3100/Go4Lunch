<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="appBarTitleTextAppearance">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/app_bar_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="titleTextColor">@color/light_grey</item>
    </style>

    <style name="itemTitleTextAppearance">
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:textSize">@dimen/item_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_is_not_black</item>
    </style>

    <style name="itemGhostGreyTextAppearance">
        <item name="android:fontFamily">@font/roboto_condensed</item>
        <item name="android:textSize">@dimen/item_medium_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/ghost_grey</item>
    </style>

    <style name="itemGhostGreyItalicTextAppearance">
        <item name="android:fontFamily">@font/roboto_condensed</item>
        <item name="android:textSize">@dimen/item_normal_text_size</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/ghost_grey</item>
    </style>

    <style name="itemGhostGreyItalicNormalTextAppearance">
        <item name="android:fontFamily">@font/roboto_condensed</item>
        <item name="android:textSize">@dimen/item_normal_text_size</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/ghost_grey</item>
    </style>

    <style name="workmateItemNormalGhostGreyItalicTextAppearance">
        <item name="android:fontFamily">@font/roboto_condensed</item>
        <item name="android:textSize">@dimen/item_title_text_size</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textColor">@color/ghost_grey</item>
    </style>

    <style name="workmateItemNormalBlackBoldTextAppearance">
        <item name="android:fontFamily">@font/roboto_condensed</item>
        <item name="android:textSize">@dimen/item_title_text_size</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:textColor">@color/black_is_not_black</item>
    </style>

    <style name="itemBlackBoldTextAppearance">
        <item name="android:fontFamily">@font/roboto_condensed</item>
        <item name="android:textSize">@dimen/item_normal_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_is_not_black</item>
    </style>

    <style name="itemSubtitleGreyTextAppearance">
        <item name="android:fontFamily">@font/roboto_condensed</item>
        <item name="android:textSize">@dimen/item_small_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="itemOpeningGreyTextAppearance">
        <item name="android:fontFamily">@font/roboto_condensed</item>
        <item name="android:textSize">@dimen/item_normal_text_size</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="itemOpeningRedTextAppearance">
        <item name="android:fontFamily">@font/roboto_condensed</item>
        <item name="android:textSize">@dimen/item_normal_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/redish_whisky</item>
    </style>

    <style name="customStarsRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">@dimen/custom_rating_stars_height</item>
        <item name="android:minWidth">@dimen/custom_rating_stars_height</item>
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
    </style>

    <style name="restaurantDetailsWhiteTitleTextAppearance">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/item_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="restaurantDetailsWhiteSubtitleTextAppearance">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/item_small_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="restaurantDetailsOrangeTextAppearance">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/item_normal_text_size</item>
